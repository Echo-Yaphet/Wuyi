.edit-page{background:#fcf6e7;min-height:100vh;padding-bottom:120rpx;}
.top{display:flex;justify-content:center;padding:36rpx 0;}
.avatar-wrap{display:flex;flex-direction:column;align-items:center;gap:16rpx;}
.avatar{width:148rpx;height:148rpx;border-radius:50%;border:6rpx solid #fff;background:#fff;box-shadow:0 4rpx 20rpx rgba(140,87,33,.08);}
.avatar-btn{background:#8c5721;color:#fff;border-radius:16rpx;padding:10rpx 22rpx;}

.form{margin:0 24rpx 120rpx;}
.form-item{background:#fff;border-radius:16rpx;padding:18rpx 20rpx;margin-bottom:16rpx;}
.label{display:block;color:#8d7a62;font-size:26rpx;margin-bottom:8rpx;}
.input{font-size:28rpx;color:#2a1d0d;}
.textarea{width:100%;min-height:160rpx;font-size:28rpx;color:#2a1d0d;line-height:1.7;}

.bottom-bar{position:fixed;left:0;right:0;bottom:0;background:#fcf6e7;padding:16rpx 24rpx 26rpx;display:flex;gap:18rpx;}
.btn{flex:1;text-align:center;border-radius:18rpx;padding:24rpx 0;font-size:30rpx;}
.btn.ghost{background:#fff;color:#8c5721;box-shadow:0 2rpx 12rpx rgba(140,87,33,.06);}
.btn.primary{background:#8c5721;color:#fff;box-shadow:0 2rpx 12rpx rgba(140,87,33,.12);}
.btn.disabled{opacity:.5;}