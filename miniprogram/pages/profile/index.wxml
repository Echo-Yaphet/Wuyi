<!-- 我的（个人中心展示页） -->
<view class="profile-page">
  <!-- 顶部信息 -->
  <view class="profile-header">
    <image class="avatar" src="{{profile.avatar || '/assets/icon/avatar.png'}}" mode="aspectFill" />
    <view class="profile-main">
      <view class="profile-name">{{profile.name || '未设置姓名'}}</view>
      <view class="profile-title">
        {{profile.title || '头衔未设置'}}
        <text wx:if="{{profile.org}}"> · {{profile.org}}</text>
      </view>
    </view>
    <view class="header-edit" bindtap="goEdit">编辑</view>
  </view>

  <!-- 菜单 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="goEdit">
      <image src="/assets/icon/profile.png" class="menu-icon" />
      <text>个人资料</text>
      <image src="/assets/icon/arrow-right.png" class="menu-arrow" />
    </view>
    <view class="menu-item" bindtap="gohistory">
      <image src="/assets/icon/history.png" class="menu-icon" />
      <text>浏览历史</text>
      <image src="/assets/icon/arrow-right.png" class="menu-arrow" />
    </view>
  </view>
  <!-- 退出登录 -->
  <button class="logout-btn" bindtap="onLogout">退出登录</button>
</view>